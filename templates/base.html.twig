<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    <link
            rel="stylesheet"
            href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
    />
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>
<nav
        class="navbar navbar-expand-lg navbar-light bg-light"
        style="height: 70px;"
>
    <a class="navbar-brand" href="#">Bluesquare dashboard</a>
    <div class="collapse navbar-collapse" id="navbarSupportedContent"></div>
    <ul class="nav navbar-nav navbar-right">
        {% if app.user is not null %}
            <li><a class="nav-link" href="{{ path('app_list_project') }}">Projets</a></li>
            <li><a class="nav-link" href="{{ path('app_logout') }}">Se deconnecter</a></li>
        {% else %}
            <li><a class="nav-link" href="{{ path('app_login') }}">Se connecter</a></li>
            <li><a class="nav-link" href="{{ path('registration') }}">S'inscrire</a></li>
        {% endif %}
        {% block menu %}{% endblock %}
    </ul>
</nav>
{% block body %}{% endblock %}
</body>
</html>
